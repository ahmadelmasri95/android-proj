<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_main_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:indeterminate="false"
        android:indeterminateTint="@color/pink"
        android:indeterminateTintMode="src_atop" />

    <ImageView
        android:id="@+id/bored1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/progressBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/boredface"
        android:src="@drawable/ic_bored_face">

    </ImageView>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/bored1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_animation2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/img_animation"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/static_circle_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/circle2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searchButton"
            style="@style/AppTheme.ButtonStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="Search" />
    </FrameLayout>

</RelativeLayout>