<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_main_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:indeterminate="false"
        android:indeterminateTint="@color/pink"
        android:indeterminateTintMode="src_atop" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/main_title"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/bored1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/main_title"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/boredface"
        android:src="@drawable/ic_bored_face">

    </ImageView>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bored1"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:background="@color/dark_grey">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_textField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="@string/hint_text"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/text_size"
                android:textStyle="normal" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/img_animation2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/img_animation"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/static_circle_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/circle2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/searchButton"
            style="@style/AppTheme.ButtonStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Search" />
    </FrameLayout>

</RelativeLayout>